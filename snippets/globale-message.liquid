    {% when 'BG',
      'CN',
      'CY',
      'EE',
      'FI',
      'HR',
      'HU',
      'KR',
      'LT',
      'LU',
      'LV',
      'MT',
      'PT',
      'RO',
      'ROW',
      'SI',
      'SK',
      'TW'
