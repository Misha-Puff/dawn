      'AT',
      'AU',
      'BE',
      'CH',
      'CZ',
      'DE',
      'DK',
      'ES',
      'FR',
      'GB',
      'GR',
      'HK',
      'IE',
      'IL',
      'IT',
      'JP',
      'MX',
      'MY',
      'NL',
      'NO',
      'NZ',
      'PL',
      'QA',
      'SA',
      'SE',
      'SG'
    %}
