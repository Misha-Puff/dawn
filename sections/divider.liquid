{%- style -%}
  @media screen and (max-width: 990px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      {% if section.settings.mobile_padding_left > 0 %}
        padding-left: {{ section.settings.mobile_padding_left  }}px;
      {% endif %}
      {% if section.settings.mobile_padding_right > 0 %}
        padding-right: {{ section.settings.mobile_padding_right  }}px;
      {% endif %}
    }
  }

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.desktop_padding_top }}px;
      padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
      {% if section.settings.desktop_padding_left > 0 %}
        padding-left: {{ section.settings.desktop_padding_left  }}px;
      {% endif %}
      {% if section.settings.desktop_padding_right > 0 %}
        padding-right: {{ section.settings.desktop_padding_right  }}px;
      {% endif %}
    }
  }

  .section-{{ section.id }} {
  }

  .divider-wrapper {
    display: flex;
    justify-content: center;

  }

  .divider {
    width: 100%;
    border-top: 1px solid rgb(1,1,1,0.25)
  }
{%- endstyle -%}

<div class="section-{{ section.id }} section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div>
    <div class="isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <div class="divider-wrapper">
        <div class="divider">
          <span class="visually-hidden">divider</span>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Divider",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "desktop_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Desktop Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "desktop_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Desktop Bottom Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "desktop_padding_left",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Desktop Left Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "desktop_padding_right",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Desktop Right Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Bottom Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "mobile_padding_left",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Left Padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "mobile_padding_right",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Right Padding",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Divider"
    }
  ]
}
{% endschema %}
