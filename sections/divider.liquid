{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }} {
  }

  .divider-wrapper {
    display: flex;
    justify-content: center;

  }

  .divider {
    width: 60%;
    border-top: 1px solid rgb(1,1,1,0.25)
  }
{%- endstyle -%}

<div class="section-{{ section.id }} section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <div class="divider-wrapper">
        <div class="divider">
          <span class="visually-hidden">divider</span>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Divider",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [],
  "presets": [
    {
      "name": "Divider"
    }
  ]
}
{% endschema %}
