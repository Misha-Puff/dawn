{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media screen and (max-width: 989px) {
    .collection {
      padding: 0;
    }
  }

  .editorial #product-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
  }

  .editorial #product-grid .grid__item {
    width: auto;
    max-width: none;
    display: block;
  }

  @media screen and (max-width: 989px) {
    .editorial #product-grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    }
  }

  .editorial-content {
    display: flex;
    height: fit-content;
  }

  .editorial-content img {
    width: 100%;
  }

  .editorial-content .editorial-overlay {
    padding: 1.5rem;
  }

  .editorial-content .editorial-overlay.content--top-left {
    position: absolute;
    top: 0;
    left: 0;
  }

  .editorial-content .editorial-overlay.content--top-center {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, 0);
  }

  .editorial-content .editorial-overlay.content--top-right {
    position: absolute;
    top: 0;
    right: 0;
  }

  .editorial-content .editorial-overlay.content--middle-left {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translate(0, -50%);
  }

  .editorial-content .editorial-overlay.content--middle-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .editorial-content .editorial-overlay.content--middle-right {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translate(0, -50%);
  }

  .editorial-content .editorial-overlay.content--bottom-left {
    position: absolute;
    bottom: 0;
    left: 0;
  }

  .editorial-content .editorial-overlay.content--bottom-center {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translate(-50%, 0);
  }

  .editorial-content .editorial-overlay.content--bottom-right {
    position: absolute;
    bottom: 0;
    right: 0;
  }

  {% for block in section.blocks %}
    @media screen and (min-width: 990px) {
      .Block-{{ block.id }} {
        grid-column-start: {{ block.settings.col_start_desktop }};
        grid-column-end: span {{ block.settings.col_span_desktop }};
        grid-row-start: {{ block.settings.row_start_desktop }};
        grid-row-end: span {{ block.settings.row_span_desktop }};
      }
    }

    @media screen and (max-width: 989px) {
      .Block-{{ block.id }} {
        grid-column-start: {{ block.settings.col_start_mobile }};
        grid-column-end: span {{ block.settings.col_span_mobile }};
        grid-row-start: {{ block.settings.row_start_mobile }};
        grid-row-end: span {{ block.settings.row_span_mobile }};
      }
    }

    .Block-{{ block.id }} .editorial-overlay {
      color: {{ block.settings.text_color }};
    }
  {% endfor %}

  {% if section.settings.enable_swatches %}
    #variant-selects-{{ section.id }} {
      position: relative;
      z-index: 3;
      margin-top: 0 !important;
    }

    #variant-selects-{{ section.id }} fieldset {
      align-items: center;
    }

    #variant-selects-{{ section.id }} .product-form__input {
      flex: 0 0 100%;
      padding: 0;
      margin: 0 0 1.2rem 0;
      min-width: fit-content;
      border: none;
    }

    #variant-selects-{{ section.id }} .product-form__input .form__label {
      padding-left: 0;
    }

    #variant-selects-{{ section.id }} .product-form__input .select {
      max-width: 100%;
    }

    #variant-selects-{{ section.id }} .product-form__input--swatch .swatch-input__input + .swatch-input__label {
      margin-right: 1rem;
    }
  {% endif %}
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  {%- paginate collection.products by section.settings.products_per_page -%}
    {% comment %} Sort is the first tabbable element when filter type is vertical {% endcomment %}
    {%- if section.settings.enable_sorting and section.settings.filter_type == 'vertical' -%}
      <facet-filters-form class="facets facets-vertical-sort page-width small-hide">
        <form class="facets-vertical-form" id="FacetSortForm">
          <div class="facet-filters sorting caption">
            <div class="facet-filters__field">
              <h2 class="facet-filters__label caption-large text-body">
                <label for="SortBy">{{ 'products.facets.sort_by_label' | t }}</label>
              </h2>
              <div class="select">
                {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
                <select
                  name="sort_by"
                  class="facet-filters__sort select__select caption-large"
                  id="SortBy"
                  aria-describedby="a11y-refresh-page-message"
                >
                  {%- for option in collection.sort_options -%}
                    <option
                      value="{{ option.value | escape }}"
                      {% if option.value == sort_by %}
                        selected="selected"
                      {% endif %}
                    >
                      {{ option.name | escape }}
                    </option>
                  {%- endfor -%}
                </select>
                {% render 'icon-caret' %}
              </div>
            </div>
          </div>

          <div class="product-count-vertical light" role="status">
            <h2 class="product-count__text text-body">
              <span id="ProductCountDesktop">
                {%- if collection.results_count -%}
                  {{
                    'templates.search.results_with_count'
                    | t: terms: collection.terms, count: collection.results_count
                  }}
                {%- elsif collection.products_count == collection.all_products_count -%}
                  {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
                {%- else -%}
                  {{
                    'products.facets.product_count'
                    | t: product_count: collection.products_count, count: collection.all_products_count
                  }}
                {%- endif -%}
              </span>
            </h2>
            {%- render 'loading-spinner' -%}
          </div>
        </form>
      </facet-filters-form>
    {%- endif -%}

    <div class="{% if section.settings.filter_type == 'vertical' %} facets-vertical page-width{% endif %}">
      {{ 'component-facets.css' | asset_url | stylesheet_tag }}
      <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
      {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
        <aside
          aria-labelledby="verticalTitle"
          class="facets-wrapper{% unless section.settings.enable_filtering %} facets-wrapper--no-filters{% endunless %}{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}"
          id="main-collection-filters"
          data-id="{{ section.id }}"
        >
          {% render 'facets',
            results: collection,
            enable_filtering: section.settings.enable_filtering,
            enable_sorting: section.settings.enable_sorting,
            filter_type: section.settings.filter_type,
            paginate: paginate
          %}
        </aside>
      {%- endif -%}

      <div
        class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        id="ProductGridContainer"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
        {% endif %}
      >
        {%- if collection.products.size == 0 -%}
          <div class="collection collection--empty page-width" id="product-grid" data-id="{{ section.id }}">
            <div class="loading-overlay gradient"></div>
            <div class="title-wrapper center">
              <h2 class="title title--primary">
                {{ 'sections.collection_template.empty' | t -}}
                <br>
                {{
                  'sections.collection_template.use_fewer_filters_html'
                  | t: link: collection.url, class: 'underlined-link link'
                }}
              </h2>
            </div>
          </div>
        {%- else -%}
          <div
            class="collection{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}{% if section.blocks.size > 0 %} editorial{% endif %}"
          >
            <div class="loading-overlay gradient"></div>
            <ul
              id="product-grid"
              data-id="{{ section.id }}"
              class="
                grid product-grid grid--{{ section.settings.columns_mobile }}-col-tablet-down
                grid--{{ section.settings.columns_desktop }}-col-desktop
                {% if section.settings.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %}
              "
            >
              {%- if paginate.current_page == 1 -%}
                {% for block in section.blocks %}
                  {% if block.settings.image != null %}
                    <li
                      class="editorial-content Block-{{ block.id }} grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                      {% if settings.animations_reveal_on_scroll %}
                        data-cascade
                        style="--animation-order: {{ forloop.index }};"
                      {% endif %}
                    >
                      {% if block.settings.link %}
                        <a href="{{ block.settings.link }}">
                      {% endif %}
                      {{ block.settings.image | image_url: width: 5760 | image_tag: width: block.settings.image.width }}
                      {% if block.settings.link %}
                        </a>
                      {% endif %}
                      {% if block.settings.content %}
                        <div class="editorial-overlay content--{{ block.settings.content_position }}">
                          {{ block.settings.content }}
                        </div>
                      {% endif %}
                    </li>
                  {% endif %}
                {% endfor %}
              {%- endif -%}

              {% assign skip_card_product_styles = false %}
              {%- comment %}<locksmith:1511>{% endcomment -%}
                {%- assign locksmith_f605_forloop__size = 0 %}{%- for product in collection.products -%}{% capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: collection, variable: 'transparent' %}{% endcapture %}{% if var == 'true' %}{% assign locksmith_f605_forloop__size = locksmith_f605_forloop__size | plus: 1 %}{% endif %}{% endfor %}{% assign locksmith_f605_forloop__index = nil -%}
              {%- comment %}</locksmith:1511>{% endcomment -%}
              {%- for product in collection.products -%}
                {%- comment %}<locksmith:63ec>{% endcomment -%}
                  {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: collection, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% if locksmith_f605_forloop__index == nil %}{% assign locksmith_f605_forloop__index = 1 %}{% assign locksmith_f605_forloop__index0 = 0 %}{% else %}{% assign locksmith_f605_forloop__index = locksmith_f605_forloop__index | plus: 1 %}{% assign locksmith_f605_forloop__index0 = locksmith_f605_forloop__index0 | plus: 1 %}{% endif %}{% if locksmith_f605_forloop__index == 1 %}{% assign locksmith_f605_forloop__first = true %}{% else %}{% assign locksmith_f605_forloop__first = false %}{% endif %}{% if locksmith_f605_forloop__index == locksmith_f605_forloop__size %}{% assign locksmith_f605_forloop__last = true %}{% else %}{% assign locksmith_f605_forloop__last = false %}{% endif %}{% assign locksmith_f605_forloop__rindex = locksmith_f605_forloop__size | minus: locksmith_f605_forloop__index | minus: 1 %}{% assign locksmith_f605_forloop__rindex0 = locksmith_f605_forloop__size | minus: locksmith_f605_forloop__index0 | minus: 1 %}{% else %}{% continue %}{% endif -%}
                {%- comment %}</locksmith:63ec>{% endcomment -%}
                {% assign lazy_load = false %}
                {%- if locksmith_f605_forloop__index > 2 -%}
                  {%- assign lazy_load = true -%}
                {%- endif -%}

                <li
                  class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}
                    data-cascade
                    style="--animation-order: {{ locksmith_f605_forloop__index }};"
                  {% endif %}
                >
                  {% render 'card-product',
                    card_product: product,
                    media_aspect_ratio: section.settings.image_ratio,
                    image_shape: section.settings.image_shape,
                    show_secondary_image: section.settings.show_secondary_image,
                    show_vendor: section.settings.show_vendor,
                    show_rating: section.settings.show_rating,
                    lazy_load: lazy_load,
                    skip_styles: skip_card_product_styles,
                    quick_add: section.settings.quick_add,
                    section_id: section.id,
                    show_swatches_availability: true
                  %}
                </li>
                {%- assign skip_card_product_styles = true -%}
              {%- endfor -%}
            </ul>

            {%- if paginate.pages > 1 -%}
              {% render 'pagination', paginate: paginate, anchor: '' %}
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  {%- endpaginate -%}
  {% if section.settings.image_shape == 'arch' %}
    {% render 'mask-arch' %}
  {%- endif -%}
</div>

